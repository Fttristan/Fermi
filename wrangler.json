{
  "name": "fermi-client",
  "compatibility_date": "2025-12-30",

  "assets": {
    "directory": "./dist/webpage"
  },

  "routes": [
    {
      "pattern": "chat.chillboiostudios.com/*",
      "custom_domain": true
    },
    {
      "pattern": "*.fermi.vrcband.workers.dev/*"
    },
    {
      "pattern": "fermi.vrcband.workers.dev/*"
    }
  ],

  "rules": [
    {
      "type": "Rewrite",
      "globs": ["channels/*"],
      "destination": "/app.html"
    },
    {
      "type": "Rewrite",
      "globs": ["invite/*"],
      "destination": "/invite.html"
    },
    {
      "type": "Rewrite",
      "globs": ["template/*"],
      "destination": "/template.html"
    }
  ]
}
